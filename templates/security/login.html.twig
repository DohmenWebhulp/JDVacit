{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="box">
    <h1 class="logos">VACIT</h1>
    <div class="box-content">
        <div class="buttons">
            <a href="{{path('registerlink')}}">REGISTREREN</a>
            <a href="{{path('homepage')}}">HOMEPAGE</a>
        </div>
    </div>
</div>
<div class="addon"></div>
<div class="grid-x">
    <div class="cell large-2">
        Logo
    </div>
    <div class="cell large-9">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 style="color: #F15A24; margin-top: 30px; margin-bottom: 30px">Login</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rc form" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control rc form" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary flotr" 
                    style="margin-top: 20px; margin-bottom: 20px; background-color: white; border: 0" 
                    type="submit">
                <div style="color: #F15A24"><i class="fas fa-arrow-right fa-2x"></i></div>
            </button>
        </form>
    </div>
{% endblock %}
