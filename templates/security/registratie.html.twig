{% extends 'base.html.twig' %}

{% block title %}Registratie{% endblock %}

{% block body %}
<div class="box">
    <h1 class="logos">VACIT</h1>
    <div class="box-content">
        <div class="buttons">
            <a href="{{path('homepage')}}">HOMEPAGE</a>
        </div>
    </div>
</div>
<div class="addon"></div>
<div class="grid-x">
    <div class="cell large-10 small-11">
        <form action="{{path('register')}}" style="margin-left: 5%" method="POST">

            <h1 style="color: #F15A24; margin-top: 30px; margin-bottom: 30px">Registreer uw informatie</h1>
            <label for="inputEmail">Email</label>
            <input type="text" value="" name="email" id="inputEmail" class="form-control rc form" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control rc form" autocomplete="current-password" required>
            <label for="inputGebruikersnaam">Gebruikersnaam</label>
            <input type="text" name="gebruikersnaam" id="inputGebruikersnaam" class="form-control rc form">
            <label for="inputAdres">Adres</label>
            <input type="text" name="adres" id="inputAdres" class="form-control rc form">
            <label for="inputGeboortedatum">Geboortedatum</label>
            <input type="text" name="geboortedatum" id="inputGeboortedatum" class="form-control rc form">
            <label for="inputTelefoonnummer">Telefoonnummer</label>
            <input type="text" name="telefoonnummer" id="inputTelefoonnummer" class="form-control rc form">
            <label for="inputPostcode">Postcode</label>
            <input type="text" name="postcode" id="inputPostcode" class="form-control rc form">
            <label for="inputWoonplaats">Woonplaats</label>
            <input type="text" name="woonplaats" id="inputWoonplaats" class="form-control rc form">

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-primary" style="margin-top: 20px" type="submit">
                Register
            </button>
        </form>
    </div>
</div>
{% endblock %}
